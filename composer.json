{
    "name": "bedwards/conjunction",
    "description": "Educational game teaching conjunctions",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "php-di/php-di": "^7.0",
        "doctrine/orm": "^2.15",
        "doctrine/dbal": "^3.6",
        "symfony/cache": "^6.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "Conjunction\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Conjunction\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
